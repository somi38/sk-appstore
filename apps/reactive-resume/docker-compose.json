{
    "services": [
        {
            "name": "app",
            "image": "amruthpillai/reactive-resume:3.11.0",
            "internalPort": 3000,
            "isMain": true,
            "volumes": [
                "/app/data/app:/opt/app/data"
            ],
            "environment": {
                "POSTGRES_HOST": "postgres",
                "POSTGRES_USER": "postgres",
                "POSTGRES_PASSWORD": "{POSTGRES_PASSWORD}",
                "MINIO_HOST": "minio",
                "MINIO_PORT": "9000",
                "MINIO_USERNAME": "{MINIO_ROOT_USER}",
                "MINIO_PASSWORD": "{MINIO_ROOT_PASSWORD}",
                "MINIO_BUCKET": "reactive-resume",
                "NODE_ENV": "production",
                "REACTIVE_RESUME_APP_URL": "http://reactive-resume"
            },
            "networks": {
                "name": "reactive-resume-net",
                "aliases": [
                    "app"
                ]
            }
        },
        {
            "name": "postgres",
            "image": "docker.io/postgres:16-alpine",
            "volumes": [
                "/app/data/db:/var/lib/postgresql/data"
            ],
            "environment": {
                "POSTGRES_USER": "postgres",
                "POSTGRES_PASSWORD": "{POSTGRES_PASSWORD}"
            },
            "networks": {
                "name": "reactive-resume-net",
                "aliases": [
                    "postgres"
                ]
            }
        },
        {
            "name": "minio",
            "image": "minio/minio",
            "command": "server /data --console-address :9001",
            "volumes": [
                "/app/data/minio:/data"
            ],
            "environment": {
                "MINIO_ROOT_USER": "{MINIO_ROOT_USER}",
                "MINIO_ROOT_PASSWORD": "{MINIO_ROOT_PASSWORD}"
            },
            "networks": {
                "name": "reactive-resume-net",
                "aliases": [
                    "minio"
                ]
            }
        }
    ]
}
