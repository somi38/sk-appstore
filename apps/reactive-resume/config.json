{
    "id": "reactive-resume",
    "name": "Reactive Resume",
    "available": true,
    "short_desc": "Open-source resume builder with PDF export and public links.",
    "description": "Reactive Resume v4 self-hosted with Postgres, MinIO and headless Chrome (Browserless) for PDF export.",
    "author": "AmruthPillai",
    "source": "https://github.com/AmruthPillai/Reactive-Resume",
    "website": "https://rxresu.me/",
    "categories": [
        "productivity",
        "utilities"
    ],
    "tipi_version": 1,
    "version": "4.5.1",
    "supported_architectures": [
        "arm64",
        "amd64"
    ],
    "port": 3000,
    "exposable": true,
    "dynamic": true,
    "form_fields": [
        {
            "type": "fqdn",
            "label": "Public App Domain (FQDN, with https://)",
            "required": true,
            "env_variable": "PUBLIC_URL",
            "placeholder": "https://rx.pynode.com"
        },
        {
            "type": "text",
            "label": "Storage URL (public MinIO bucket URL incl. /default)",
            "required": true,
            "env_variable": "STORAGE_URL",
            "placeholder": "https://s3.rx.pynode.com/default"
        },
        {
            "type": "random",
            "label": "Access Token Secret",
            "required": true,
            "min": 64,
            "encoding": "hex",
            "env_variable": "ACCESS_TOKEN_SECRET"
        },
        {
            "type": "random",
            "label": "Refresh Token Secret",
            "required": true,
            "min": 64,
            "encoding": "hex",
            "env_variable": "REFRESH_TOKEN_SECRET"
        },
        {
            "type": "random",
            "label": "Postgres Password",
            "required": true,
            "min": 24,
            "encoding": "hex",
            "env_variable": "POSTGRES_PASSWORD"
        },
        {
            "type": "text",
            "label": "MinIO Root User",
            "required": true,
            "default": "minioadmin",
            "env_variable": "MINIO_ROOT_USER"
        },
        {
            "type": "random",
            "label": "MinIO Root Password",
            "required": true,
            "min": 24,
            "encoding": "hex",
            "env_variable": "MINIO_ROOT_PASSWORD"
        },
        {
            "type": "random",
            "label": "Chrome Token",
            "required": true,
            "min": 32,
            "encoding": "hex",
            "env_variable": "CHROME_TOKEN"
        },
        {
            "type": "email",
            "label": "MAIL_FROM",
            "required": true,
            "default": "noreply@rx.pynode.com",
            "env_variable": "MAIL_FROM"
        },
        {
            "type": "text",
            "label": "SMTP_URL (optional, smtp://user:pass@smtp.host:587)",
            "required": false,
            "env_variable": "SMTP_URL"
        },
        {
            "type": "boolean",
            "label": "Disable Signups?",
            "required": true,
            "default": "false",
            "env_variable": "DISABLE_SIGNUPS"
        }
    ]
}
