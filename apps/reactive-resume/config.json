{
    "id": "reactive-resume",
    "name": "Reactive Resume",
    "available": true,
    "short_desc": "Open-source resume builder with PDF export and public links.",
    "description": "Reactive Resume v4 self-hosted (app + Postgres + MinIO + headless Chrome).",
    "author": "AmruthPillai",
    "source": "https://github.com/AmruthPillai/Reactive-Resume",
    "website": "https://rxresu.me/",
    "categories": [
        "productivity",
        "utilities"
    ],
    "tipi_version": 1,
    "version": "4.x",
    "supported_architectures": [
        "arm64",
        "amd64"
    ],
    "port": 3000,
    "exposable": true,
    "dynamic_config": true,
    "form_fields": [
        {
            "type": "fqdn",
            "label": "Public App Domain (FQDN)",
            "required": true,
            "env_variable": "PUBLIC_URL",
            "placeholder": "https://rx.pynode.com"
        },
        {
            "type": "text",
            "label": "Storage URL (public)",
            "hint": "Option A: http(s)://<host>:9000/default  â€¢  Option B: https://s3.rx.pynode.com/default",
            "required": true,
            "env_variable": "STORAGE_URL",
            "placeholder": "https://s3.rx.pynode.com/default"
        },
        {
            "type": "random",
            "label": "Access Token Secret",
            "required": true,
            "min": 64,
            "env_variable": "ACCESS_TOKEN_SECRET",
            "encoding": "hex"
        },
        {
            "type": "random",
            "label": "Refresh Token Secret",
            "required": true,
            "min": 64,
            "env_variable": "REFRESH_TOKEN_SECRET",
            "encoding": "hex"
        },
        {
            "type": "random",
            "label": "Postgres Password",
            "required": true,
            "min": 24,
            "env_variable": "POSTGRES_PASSWORD",
            "encoding": "hex"
        },
        {
            "type": "text",
            "label": "MinIO Root User",
            "required": true,
            "env_variable": "MINIO_ROOT_USER",
            "default": "minioadmin"
        },
        {
            "type": "random",
            "label": "MinIO Root Password",
            "required": true,
            "min": 24,
            "env_variable": "MINIO_ROOT_PASSWORD",
            "encoding": "hex"
        },
        {
            "type": "random",
            "label": "Chrome Token",
            "required": true,
            "min": 32,
            "env_variable": "CHROME_TOKEN",
            "encoding": "hex"
        },
        {
            "type": "email",
            "label": "MAIL_FROM",
            "required": true,
            "env_variable": "MAIL_FROM",
            "default": "noreply@rx.pynode.com"
        },
        {
            "type": "text",
            "label": "SMTP_URL (optional)",
            "hint": "Format: smtp://user:pass@smtp.host:587",
            "required": false,
            "env_variable": "SMTP_URL"
        },
        {
            "type": "boolean",
            "label": "Disable Signups?",
            "required": true,
            "env_variable": "DISABLE_SIGNUPS",
            "default": "false"
        }
    ]
}
